package login;
 
import java.io.BufferedReader;
import java.io.InputStream;
import java.io.InputStreamReader;

import javax.ws.rs.*;
import javax.ws.rs.core.MediaType;
import javax.ws.rs.core.Response;

import org.json.simple.JSONObject;
import org.json.simple.parser.JSONParser;
import org.json.simple.parser.ParseException;

import models.User;
 
@Path("/login")
public class Login { 
	@POST
	@Consumes(MediaType.APPLICATION_JSON)
	public Response login(InputStream incomingData) throws ParseException {
		StringBuilder crunchifyBuilder = new StringBuilder();
		try {
			BufferedReader in = new BufferedReader(new InputStreamReader(incomingData));
			String line = null;
			while ((line = in.readLine()) != null) {
				crunchifyBuilder.append(line);
			}
		} catch (Exception e) {
			System.out.println("Error Parsing: - ");
		}
		System.out.println("Data Received: " + crunchifyBuilder.toString());
		
		JSONObject json = (JSONObject)new JSONParser().parse(crunchifyBuilder.toString());
		System.out.println("name=" + json.get("name"));
		
		JSONParser parser = new JSONParser();
	    User transformer = new User();
	        
	    transformer = (User)parser.parse(crunchifyBuilder.toString());
	    System.out.println("width=" + transformer.getGender());
	    
		// return HTTP response 200 in case of success
		return Response.status(200).entity(crunchifyBuilder.toString()).build();
	}
	
}